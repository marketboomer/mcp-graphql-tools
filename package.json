{
  "name": "mcp-graphql-tools",
  "version": "0.0.1",
  "description": "GraphQL MCP server for AI assistants",
  "author": "saewoohan <hso2341@naver.com>",
  "license": "MIT",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-graphql": "./build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "format": "npx @biomejs/biome format --write src/",
    "check": "npx @biomejs/biome check --apply src/",
    "lint": "npx @biomejs/biome lint src/"
  },
  "keywords": [
    "graphql",
    "mcp",
    "claude",
    "ai",
    "assistant",
    "modelcontextprotocol",
    "llm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saewoohan/mcp-server-tools"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "axios": "^1.8.4",
    "graphql": "^16.10.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.13",
    "typescript": "^5.8.2"
  }
}
